{
  "name": "gobi-api",
  "version": "1.0.0",
  "description": "Gobi backend using node express",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "babel src -d build",
    "start:buld": "node build/server.js",
    "start": "npx babel-node --presets @babel/preset-env -- ./src/server.js",
    "prod": "npx babel-node --presets @babel/preset-env -- ./src/server.js",
    "dev": "nodemon --exec babel-node ./src/server.js",
    "migrate": "npx sequelize-cli db:migrate",
    "down": "npx sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "undo-seed": "npx sequelize-cli db:seed:undo",
    "test": "npm run down && npm run migrate && npm run seed && nyc mocha --require @babel/register ./tests/**/*.js --timeout 30000 --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noza-tech/gobi-api.git"
  },
  "author": "Uwambaje Eddy & Mugisha Abdoul",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/noza-tech/gobi-api/issues"
  },
  "homepage": "https://github.com/noza-tech/gobi-api#readme",
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/compat-data": "^7.17.10",
    "@babel/core": "^7.15.0",
    "@babel/node": "^7.14.9",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-transform-runtime": "^7.17.12",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/register": "^7.17.7",
    "@babel/runtime": "^7.17.9",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.17.15",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
